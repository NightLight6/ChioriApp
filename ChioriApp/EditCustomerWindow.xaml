<Window x:Class="ChioriApp.EditCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование клиента" Height="500" Width="400">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="Имя:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtFirstName" Margin="0,0,0,10"/>

            <TextBlock Text="Фамилия:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtLastName" Margin="0,0,0,10"/>

            <TextBlock Text="Отчество (Необязательно):" Margin="0,0,0,5"/>
            <TextBox x:Name="txtPatronymic" Margin="0,0,0,10"/>

            <TextBlock Text="Дата рождения (Необязательно):" Margin="0,0,0,5"/>
            <DatePicker x:Name="dpBirthDate" Margin="0,0,0,20"/>

            <TextBlock Text="Email:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtEmail" Margin="0,0,0,10"/>

            <TextBlock Text="Телефон:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtPhone" Margin="0,0,0,20"/>

            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Padding="8" Margin="0,20,0,15">
                <StackPanel>
                    <TextBlock Text="Дата регистрации" FontWeight="SemiBold" Foreground="#555"/>
                    <TextBlock x:Name="lblRegistrationDate" FontSize="14" FontWeight="Medium" Foreground="#333"/>
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Сохранить" Click="BtnSave_Click" Padding="10,5" Margin="0,0,10,0"/>
                <Button Content="Назад" Click="BtnBack_Click" Padding="10,5"/>
            </StackPanel>
            <TextBlock x:Name="lblError" Foreground="Red" TextWrapping="Wrap" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="ChioriApp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Админка — Чиори" Height="550" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Content="Назад" Click="BtnBack_Click" Padding="8,4" Margin="0,0,10,0"/>
            <Button Content="Обновить список" Click="BtnRefresh_Click" Padding="8,4"/>
        </StackPanel>

        <DataGrid x:Name="dgUsers" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding UserId}" Width="50"/>
                <DataGridTextColumn Header="Логин" Binding="{Binding Username}" Width="120"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="180"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="120"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding Customer.FirstName}" Width="100"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding Customer.LastName}" Width="100"/>
                <DataGridTextColumn Header="Отчество" Binding="{Binding Customer.Patronymic}" Width="100"/>
                <DataGridTextColumn Header="Роль" Binding="{Binding Role.RoleName}" Width="120"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding AccountStatusId}" Width="80"/>
                <DataGridTextColumn Header="Дата регистрации" Binding="{Binding Created_at, StringFormat=d}" Width="120"/>
            </DataGrid.Columns>

            <DataGrid.Resources>
                <ContextMenu x:Key="UserContextMenu">
                    <MenuItem Header="Редактировать" Click="MenuEditUser_Click"/>
                    <MenuItem Header="Удалить" Click="MenuDeleteUser_Click" Foreground="Red"/>
                </ContextMenu>
            </DataGrid.Resources>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="ContextMenu" Value="{StaticResource UserContextMenu}"/>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
    </Grid>
</Window>
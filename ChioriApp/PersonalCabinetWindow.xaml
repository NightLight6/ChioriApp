<Window x:Class="ChioriApp.PersonalCabinetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Личный кабинет" Height="400" Width="400">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="Мои данные" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

            <TextBlock x:Name="lblFullName" FontSize="14" Margin="0,0,0,10"/>
            <TextBlock x:Name="lblLogin" Margin="0,0,0,5"/>
            <TextBlock x:Name="lblEmail" Margin="0,0,0,5"/>
            <TextBlock x:Name="lblPhone" Margin="0,0,0,5"/>

            <Button Content="Назад" Click="BtnBack_Click" Padding="8,4" HorizontalAlignment="Left" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
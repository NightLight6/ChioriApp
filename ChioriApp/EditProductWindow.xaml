<Window x:Class="ChioriApp.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование товара" Height="500" Width="400">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="Артикул:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtArticle" IsReadOnly="True" Margin="0,0,0,10"/>

            <TextBlock Text="Название:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtName" Margin="0,0,0,10"/>

            <TextBlock Text="Описание:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtDescription" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10" Height="80"/>

            <TextBlock Text="Цена:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtPrice" Margin="0,0,0,10"/>

            <TextBlock Text="Статус:" Margin="0,0,0,5"/>
            <ComboBox x:Name="cmbStatus" Margin="0,0,0,20">
                <ComboBoxItem Content="Активен" Tag="1"/>
                <ComboBoxItem Content="Снят с продажи" Tag="2"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Сохранить" Click="BtnSave_Click" Padding="10,5" Margin="0,0,10,0"/>
                <Button Content="Назад" Click="BtnBack_Click" Padding="10,5"/>
            </StackPanel>
            <TextBlock x:Name="lblError" Foreground="Red" TextWrapping="Wrap" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
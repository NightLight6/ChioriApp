<Window x:Class="ChioriApp.OrderDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Детали заказа" Height="500" Width="700">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Информация о заказе" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock x:Name="lblOrderInfo" TextWrapping="Wrap"/>
        </StackPanel>

        <DataGrid x:Name="dgItems" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Товар" Binding="{Binding ProductName}" Width="*"/>
                <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="80"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding PriceAtOrder, StringFormat=F2}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Назад" Click="BtnBack_Click" Padding="10,5"/>
            <Button Content="Редактировать" Click="BtnEditOrder_Click" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="ChioriApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Чиори — Авторизация" Height="350" Width="350">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Логин:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtLogin" Margin="0,0,0,10"/>
            <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,15"/>

            <Button Content="Войти" Click="BtnLogin_Click" Padding="10" Margin="0,0,0,10"/>

            <Button Content="Регистрация" Click="BtnRegister_Click" Padding="10" Cursor="Hand"/>

            <TextBlock x:Name="lblError"  Foreground="Red"  TextWrapping="Wrap" Margin="0,15,0,0" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
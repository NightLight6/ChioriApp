<Window x:Class="ChioriApp.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить товар" Height="450" Width="400">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="Артикул:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtArticle" Margin="0,0,0,10"/>

            <TextBlock Text="Название:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtName" Margin="0,0,0,10"/>

            <TextBlock Text="Цена:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtPrice" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Сохранить" Click="BtnSave_Click" Padding="10,5" Margin="0,0,10,0"/>
                <Button Content="Отмена" Click="BtnCancel_Click" Padding="10,5"/>
            </StackPanel>
            <TextBlock x:Name="lblError" Foreground="Red" TextWrapping="Wrap" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
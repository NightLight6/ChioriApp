<Window x:Class="ChioriApp.UserEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование пользователя" Height="750" Width="380">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="Логин:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtLogin" Margin="0,0,0,15"/>

            <TextBlock Text="Email:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtEmail" Margin="0,0,0,15"/>

            <TextBlock Text="Телефон:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtPhone" Margin="0,0,0,15"/>

            <TextBlock Text="Имя:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtFirstName" Margin="0,0,0,15"/>

            <TextBlock Text="Фамилия:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtLastName" Margin="0,0,0,15"/>

            <TextBlock Text="Отчество (Необязательно):" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtMiddleName" Margin="0,0,0,15"/>

            <TextBlock Text="Роль:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ComboBox x:Name="cmbRole" 
                      DisplayMemberPath="RoleName" 
                      SelectedValuePath="RoleId" 
                      Margin="0,0,0,15"/>

            <TextBlock Text="Статус аккаунта:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ComboBox x:Name="cmbAccountStatus" Margin="0,0,0,15"/>

            <TextBlock Text="Дата регистрации:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBlock x:Name="lblRegistrationDate" FontWeight="Medium" Margin="0,0,0,15"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Сохранить" Click="BtnSave_Click" Padding="12,6" Margin="0,0,10,0" Background="#28a745" Foreground="White"/>
                <Button Content="Назад" Click="BtnBack_Click" Padding="12,6"/>
            </StackPanel>

            <TextBlock x:Name="lblError" Foreground="Red" TextWrapping="Wrap" Margin="0,15,0,0"/>
        </StackPanel>
    </Grid>
</Window>
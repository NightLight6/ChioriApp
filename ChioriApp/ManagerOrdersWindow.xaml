<Window x:Class="ChioriApp.ManagerOrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление заказами — Менеджер" Height="550" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Назад" Click="BtnBack_Click" Padding="8,4" Margin="0,0,10,0"/>
            <Button Content="Обновить" Click="BtnRefresh_Click" Padding="8,4"/>
        </StackPanel>

        <DataGrid x:Name="dgOrders"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  SelectionChanged="DgOrders_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID заказа" Binding="{Binding OrderId}" Width="80"/>
                <DataGridTextColumn Header="Клиент ID" Binding="{Binding CustomerId}" Width="80"/>
                <DataGridTextColumn Header="Сумма" Binding="{Binding TotalAmount, StringFormat=F2}" Width="80"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding StatusId}" Width="100"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding OrderDate, StringFormat=d}" Width="100"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding ContactPhone}" Width="120"/>
                <DataGridTextColumn Header="Адрес" Binding="{Binding DeliveryAddress}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
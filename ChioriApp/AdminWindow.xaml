<Window x:Class="ChioriApp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Админка — Чиори" Height="550" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Content="Назад" Click="BtnBack_Click" Padding="8,4" Margin="0,0,10,0"/>
            <Button Content="Обновить список" Click="BtnRefresh_Click" Padding="8,4"/>
        </StackPanel>

        <DataGrid x:Name="dgUsers" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}"/>
                <DataGridTextColumn Header="Логин" Binding="{Binding Логин}"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding Телефон}"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding Имя}"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding Фамилия}"/>
                <DataGridTextColumn Header="Отчество" Binding="{Binding Отчество}"/>
                <DataGridTextColumn Header="Роль" Binding="{Binding Роль}"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Статус}"/>
                <DataGridTextColumn Header="Дата регистрации" Binding="{Binding Дата_регистрации, StringFormat={}{0:dd.MM.yyyy}}"/>
            </DataGrid.Columns>

            <DataGrid.Resources>
                <ContextMenu x:Key="UserContextMenu">
                    <MenuItem Header="Редактировать" Click="MenuEditUser_Click"/>
                    <MenuItem Header="Удалить" Click="MenuDeleteUser_Click" Foreground="Red"/>
                </ContextMenu>
            </DataGrid.Resources>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="ContextMenu" Value="{StaticResource UserContextMenu}"/>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
    </Grid>
</Window>
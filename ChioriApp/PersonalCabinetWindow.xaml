<Window x:Class="ChioriApp.PersonalCabinetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Личный кабинет — Чиори" Height="550" Width="700"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Мой профиль" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Border CornerRadius="8" Padding="15" Margin="0,0,0,20" BorderBrush="#E0E0E0" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Персональные данные" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        <TextBlock x:Name="lblFullName" FontSize="16" Margin="0,0,0,5"/>
                        <TextBlock x:Name="lblLogin" Margin="0,0,0,3"/>
                        <TextBlock x:Name="lblEmail" Margin="0,0,0,3"/>
                        <TextBlock x:Name="lblPhone" Margin="0,0,0,3"/>
                        <TextBlock x:Name="lblRegistrationDate" Margin="0,0,0,3"/>
                    </StackPanel>
                </Border>

                <TextBlock Text="История заказов" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                <DataGrid x:Name="dgOrders"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          RowHeight="30">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="№ заказа" Binding="{Binding OrderNumber}" Width="120"/>
                        <DataGridTextColumn Header="Дата" Binding="{Binding OrderDate, StringFormat=d}" Width="100"/>
                        <DataGridTextColumn Header="Сумма" Binding="{Binding TotalAmount, StringFormat=F2}" Width="80"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding StatusId}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </ScrollViewer>

        <Button Content="Назад" Click="BtnBack_Click" Padding="10,5" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Row="1" Margin="0,0,0,10"/>
    </Grid>
</Window>
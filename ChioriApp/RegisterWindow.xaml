<Window x:Class="ChioriApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация клиента" Height="800" Width="350">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="Имя:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtFirstName" Margin="0,0,0,10"/>

            <TextBlock Text="Фамилия:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtLastName" Margin="0,0,0,10"/>

            <TextBlock Text="Отчество (необязательно):" Margin="0,0,0,5"/>
            <TextBox x:Name="txtpatronymic" Margin="0,0,0,10"/>

            <TextBlock Text="Дата рождения (необязательно):" Margin="0,0,0,5"/>
            <DatePicker x:Name="dpBirthDate" Margin="0,0,0,15"/>

            <TextBlock Text="Логин:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtLogin" Margin="0,0,0,10"/>

            <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,10"/>

            <TextBlock Text="Email:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtEmail" Margin="0,0,0,10"/>

            <TextBlock Text="Телефон (необязательно):" Margin="0,0,0,5"/>
            <TextBox x:Name="txtPhone" Margin="0,0,0,10"/>

            <TextBlock Text="Роль:" Margin="0,0,0,5"/>
            <ComboBox x:Name="cmbRole" DisplayMemberPath="RoleName" SelectedValuePath="RoleId" Margin="0,0,0,15"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Отмена" Click="BtnCancel_Click" Margin="0,0,10,0" Padding="10,5"/>
                <Button Content="Зарегистрироваться" Click="BtnRegister_Click" Padding="10,5"/>
            </StackPanel>

            <TextBlock x:Name="lblError" Foreground="Red" TextWrapping="Wrap" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
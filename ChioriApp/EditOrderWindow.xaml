<Window x:Class="ChioriApp.EditOrderWindow"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        Title="Редактирование заказа" Height="450" Width="450">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="Адрес доставки:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtAddress" TextWrapping="Wrap" AcceptsReturn="True" Height="60" Margin="0,0,0,10"/>

            <TextBlock Text="Телефон:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtPhone" Margin="0,0,0,10"/>

            <TextBlock Text="Email:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtEmail" Margin="0,0,0,10"/>

            <TextBlock Text="Статус заказа:" Margin="0,0,0,5"/>
            <ComboBox x:Name="cmbStatus" Margin="0,0,0,20">
                <ComboBoxItem Content="Новый" Tag="1"/>
                <ComboBoxItem Content="В обработке" Tag="2"/>
                <ComboBoxItem Content="Отправлен" Tag="3"/>
                <ComboBoxItem Content="Доставлен" Tag="4"/>
                <ComboBoxItem Content="Отменён" Tag="5"/>
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Сохранить" Click="BtnSave_Click" Padding="10,5" Margin="0,0,10,0" Background="Green" Foreground="White"/>
                <Button Content="Назад" Click="BtnBack_Click" Padding="10,5"/>
            </StackPanel>

            <TextBlock x:Name="lblError" Foreground="Red" TextWrapping="Wrap" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="ChioriApp.EditOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование заказа" Height="800" Width="500">
    <Grid Margin="15">
        <ScrollViewer>
            <StackPanel>
                <TextBlock Text="Адрес доставки:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtAddress" TextWrapping="Wrap" AcceptsReturn="True" Height="60" Margin="0,0,0,15"/>

                <TextBlock Text="Телефон:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtPhone" Margin="0,0,0,15"/>

                <TextBlock Text="Email:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail" Margin="0,0,0,15"/>

                <TextBlock Text="Статус заказа:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbStatus" Margin="0,0,0,15">
                    <ComboBoxItem Content="Новый" Tag="1"/>
                    <ComboBoxItem Content="В обработке" Tag="2"/>
                    <ComboBoxItem Content="Отправлен" Tag="3"/>
                    <ComboBoxItem Content="Доставлен" Tag="4"/>
                    <ComboBoxItem Content="Отменён" Tag="5"/>
                </ComboBox>

                <TextBlock Text="Способ доставки:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbDeliveryMethod" Margin="0,0,0,15">
                    <ComboBoxItem Content="Курьер" Tag="1"/>
                    <ComboBoxItem Content="Самовывоз" Tag="2"/>
                </ComboBox>

                <TextBlock Text="Способ оплаты:" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbPaymentMethod" Margin="0,0,0,15">
                    <ComboBoxItem Content="Онлайн" Tag="1"/>
                    <ComboBoxItem Content="Наличными" Tag="2"/>
                </ComboBox>

                <TextBlock Text="Код самовывоза: (Необязательно)" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtPickupCode" Margin="0,0,0,15"/>

                <TextBlock Text="Комментарии: (Необязательно)" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtComments" TextWrapping="Wrap" AcceptsReturn="True" Height="60" Margin="0,0,0,15"/>

                <TextBlock Text="Планируемая дата доставки:" FontWeight="Bold" Margin="0,0,0,5"/>
                <DatePicker x:Name="dpPlannedDelivery" Margin="0,0,0,15"/>

                <TextBlock Text="Фактическая дата доставки:" FontWeight="Bold" Margin="0,0,0,5"/>
                <DatePicker x:Name="dpActualDelivery" Margin="0,0,0,15"/>

                <TextBlock Text="Сумма заказа:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtTotalAmount" Margin="0,0,0,15"/>

                <TextBlock Text="Скидка:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtDiscountAmount" Margin="0,0,0,15"/>

                <TextBlock Text="Итоговая сумма:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtFinalAmount" Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Сохранить" Click="BtnSave_Click" Padding="12,6" Margin="0,0,10,0" Background="#28a745" Foreground="White"/>
                    <Button Content="Назад" Click="BtnBack_Click" Padding="12,6"/>
                </StackPanel>

                <TextBlock x:Name="lblError" Foreground="Red" TextWrapping="Wrap" Margin="0,15,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
<Window x:Class="ChioriApp.UserEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование пользователя" Height="400" Width="350">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="Логин:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtLogin" Margin="0,0,0,10"/>

            <TextBlock Text="Email:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtEmail" Margin="0,0,0,10"/>

            <TextBlock Text="Телефон:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtPhone" Margin="0,0,0,10"/>

            <TextBlock Text="Роль:" Margin="0,0,0,5"/>
            <ComboBox x:Name="cmbRole" DisplayMemberPath="Title" SelectedValuePath="RoleId" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Сохранить" Click="BtnSave_Click" Padding="10,5" Margin="0,0,10,0" Background="Green" Foreground="White"/>
                <Button Content="Назад" Click="BtnBack_Click" Padding="10,5"/>
            </StackPanel>

            <TextBlock x:Name="lblError" Foreground="Red" TextWrapping="Wrap" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
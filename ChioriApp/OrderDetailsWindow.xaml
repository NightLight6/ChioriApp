<Window x:Class="ChioriApp.OrderDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Детали заказа" Height="600" Width="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border CornerRadius="5" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Информация о заказе" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock x:Name="lblOrderInfo" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <TextBlock Grid.Row="1" Text="Товары в заказе:" FontWeight="Bold" Margin="0,0,0,5"/>
        <DataGrid x:Name="dgItems" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,25,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Артикул" Binding="{Binding Product.Article}" Width="100"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Product.Name}" Width="200"/>
                <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="70"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding PriceAtOrder, StringFormat=F2}" Width="80"/>
                <DataGridTextColumn Header="Итого" Binding="{Binding Subtotal, StringFormat=F2}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Назад" Click="BtnBack_Click" Padding="10,5"/>
            <Button Content="Редактировать" Click="BtnEditOrder_Click" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>